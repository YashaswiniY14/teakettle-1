  <main>
    <article>

      <!-- 
        - #MENU
      -->

      <section class="section menu" aria-label="menu-label" id="menu">
        <div class="container menup" >

          <!-- <p class="section-subtitle text-center label-2">Flavors for Royalty</p> -->

          <h2 class="headline-1 section-title text-center">Menu</h2>
          <ul class="grid-list">
            <% if (products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <li>
                        <div class="menu-card hover:card" onclick="toggleCard(event, this)">
                            <figure class="card-banner img-holder" style="--width: 100; --height: 100;">
                                <img src="<%= product.image %>" width="100" height="100" loading="lazy"
                                    alt="<%= product.product_name %>" class="img-cover">
                            </figure>
                            <div>
                                <div class="title-wrapper">
                                    <h3 class="title-3">
                                        <a href="#" class="card-title"><%= product.product_name %></a>
                                    </h3>
                                    <% if (product.type === 'Masala') { %>
                                        <span class="badge label-1">Special</span>
                                    <% } %>
                                </div>
                                <p class="card-text label-1">
                                    <%= product.description %>
                                </p>
                                <div class="options" style="display: none;">
                                    <div class="weight-options">
                                        <label for="weight-select-<%= product.product_id %>">Choose weight:</label>
                                        <select name="weight-select" id="weight-select-<%= product.product_id %>" onchange="updatePrice(this, <%- JSON.stringify(product.product_id) %>)">
                                            <% if (productOptions[product.product_id]) { %>
                                                <% productOptions[product.product_id].forEach(function(option) { %>
                                                    <option value="<%= option.quantity %>"><%= option.quantity %>g - Rs. <%= option.price %></option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="quantity-wrapper">
                                        <label for="quantity-<%= product.product_id %>">Quantity:</label>
                                        <input type="number" id="quantity-<%= product.product_id %>" name="quantity" min="1" max="10" value="1">
                                    </div>
                                    <button class="btn add-to-cart-btn" 
                                          onclick="addToCart(<%= product.product_id %>)"
                                          data-product-id="<%= product.product_id %>"
                                          data-product-name="<%= product.product_name %>"
                                          data-product-price="<%= productOptions[product.product_id] ? productOptions[product.product_id][0].price : 0 %>">
                                      Add to Cart
                                  </button>
                                    <!-- <button class="btn add-to-cart-btn" onclick="addToCart(<%= product.product_id %>)">
                                    <button class="btn add-to-cart-btn" 
                                            data-product-id="<%= product.product_id %>" 
                                            data-product-name="<%= product.product_name %>" 
                                            data-product-price="<%= productOptions[product.product_id] ? productOptions[product.product_id][0].price : 0 %>">
                                        Add to Cart
                                    </button> -->
                                </div>
                            </div>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>No products available.</li>
            <% } %>
        

          </ul>

